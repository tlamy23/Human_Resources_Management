= form_for(@calendar_type) do |f|
  - if @calendar_type.errors.any?
    #error_explanation{class: "alert alert-danger"}
      %h2
        = pluralize(@calendar_type.errors.count, "error")
        prohibited this calendar_type from being saved:
      %ul
        - @calendar_type.errors.full_messages.each do |msg|
          %li= msg
  %div{class: "form-group"}
    = f.label "Image", :class => "control-label"
    %br/
    = image_tag(@calendar_type.image, :size => "75x75", :class => "img-thumbnail")
  %div{class: "form-group"}
    = f.label :name, :class => "control-label"
    %br/
    = f.text_field :name,:class =>"form-control"
  %div{class: "form-group"}
    = f.label "Image", :class => "control-label"
    %br/
    = f.file_field :dataimage,:class =>"form-control"
  .actions
    = f.submit :class =>"btn btn-Primary"

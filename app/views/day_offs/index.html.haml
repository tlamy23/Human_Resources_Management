%center
  %h1 Listing Days Offs
  %table.table
    %thead
      %tr
        %th Name
        %th Date
        %th Type
        %th
        %th
        %th
    %tbody
      - @day_offs.each do |day_off|
        %tr
          %td= link_to day_off.name, day_off
          %td= day_off.date
          %td= image_tag day_off.calendar_type.image, :size => "75x75"
          %td= link_to 'Edit', edit_day_off_path(day_off)
          %td= link_to 'Destroy', day_off, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Day off', new_day_off_path

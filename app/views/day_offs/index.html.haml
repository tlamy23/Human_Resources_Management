%center
  %h1 Listing day_offs
  %table
    %thead
      %tr
        %th Name
        %th Date
        %th Type
        %th
        %th
        %th
    %tbody
      - @day_offs.each do |day_off|
        %tr
          %td= day_off.name
          %td= day_off.date
          %td= day_off.calendar_type.name
          %td= link_to 'Show', day_off
          %td= link_to 'Edit', edit_day_off_path(day_off)
          %td= link_to 'Destroy', day_off, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Day off', new_day_off_path

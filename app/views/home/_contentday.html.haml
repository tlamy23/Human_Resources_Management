- c = day_list_content(content,day)
- controller = day_controller(content)
- path = day_pathlink_content(content)
- icon = day_icon_content(content)
- if c.count>0
  = link_to icon,{controller: controller , action: "#{content}byday", day: day },class: "col-md-1 col-xs-1 tt",id: "#{content}-target-#{day.day}"
  = content_tag :div, id: "#{content}-content-#{day.day}", style: "display:none" do
    - c.each do |e|
      .media
        .pull-left
          - media = day_media_content(content,nil,e)
          = image_tag(media, :size => "35x35")
        .media-body
          - mbody = day_mediabody_content(content,nil,e)
          = mbody
- else
  %span.col-md-1.col-xs-1.glyphicon.glyphicon-stop{style: "visibility:hidden;"}          
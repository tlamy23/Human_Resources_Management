.col-md-4.col-md-offset-4
  %p#notice= notice

  %p
    %b Name:
    = @project.name
  %p
    %b Admin:
    %a{href: employee_path(@project.admin)}
      = "#{@project.admin.name} #{@project.admin.first_lastname}"
  - if @project.team.present?
    %p
      %b Team:
      %a{href: team_path(@project.team)}
        = @project.team.name
    %p
      %b Leader:
      %a{href: employee_path(@project.team.leader)}
        = "#{@project.team.leader.name} #{@project.team.leader.first_lastname}"
    %p
      %b Members:
      - if @employees.present?
        %ul
          - @employees.each do |e|
            %li.list-group-item
              = image_tag(e.image, :size => "35x35")
              %a{href: employee_path(e)}
                = "#{e.name} #{e.first_lastname}"
  %p
    %b Calendar Type
    = image_tag(@project.calendar_type.image, :size => "35x35")

  = link_to 'Edit', edit_project_path(@project)
  \|
  = link_to 'Back', projects_path

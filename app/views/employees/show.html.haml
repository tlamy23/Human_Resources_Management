%center
  %p#notice= notice
  %p
    = image_tag(@employee.image, :size => "200x200")
  %p
    %strong Name:
    = @employee.name
  %p
    %strong First lastname:
    = @employee.first_lastname
  %p
    %strong Second lastname:
    = @employee.second_lastname
  %p
    %strong Birthdate:
    = @employee.birthdate
  %p
    %strong Team:
    = @employee.team.present? ? link_to(@employee.team.name,@employee.team) : "Don't have a team"
  = link_to 'Edit', edit_employee_path(@employee)
  |
  \#{link_to 'Back', employees_path}

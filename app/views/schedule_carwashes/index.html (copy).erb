<h1>Listing schedule_carwashes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Turn</th>
      <th>Employee</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_carwashes.each do |schedule_carwash| %>
      <tr>
        <td><%= schedule_carwash.date %></td>
        <td><%= schedule_carwash.turn %></td>
        <td><%= schedule_carwash.employee.name + ' ' + schedule_carwash.employee.first_lastname %></td>
        <td><%= link_to 'Show', schedule_carwash %></td>
        <td><%= link_to 'Edit', edit_schedule_carwash_path(schedule_carwash) %></td>
        <td><%= link_to 'Destroy', schedule_carwash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule carwash', new_schedule_carwash_path %><br>
<%= link_to "Generate",{:action => "generateSchedule"}%><br>
<% @month = Date.today.month %>
<% @day=Date.today %>
<% @day= @day - Date.today.day %>
<% @day += 1 %>
<% @days=["Sun","Mon","Tue","Wed","Thu","Fri","Sat"]%>
 <% puts (@days.to_s)%>
<% puts(@month.to_s + ' ' + @day.to_s) %>
<h1><%=@day.strftime("%Y/%m")%></h1>
<table border="1">
  <thead>
    <th>Sun</th>
    <th>Mon</th>
    <th>Tur</th>
    <th>wen</th>
    <th>Thu</th>
    <th>Fri</th>
    <th>Sat</th>
  </thead>
  <% while @month == @day.month %>
    <tr>
      <% @days.each do|d| %>
        <td height="100" width="250">
          <div>
            <% if @day.strftime("%a") == d%>
              <h3><%= @day.day.to_s %></h3>
              <% puts(@day.to_s) %>
              <% s = ScheduleCarwash.where(:date=>@day).order(:turn) %>
              <% puts('Employees:' + s.count.to_s) %>
              <% if s.count>0 %>
                <table>
                  <% s.each do |sc|%>
                    <tr>
                      <td><%= sc.turn %></td>
                      <td><%= sc.employee.name + ' ' + sc.employee.first_lastname %></td>
                      <td><%= link_to 'Edit', edit_schedule_carwash_path(sc) %></td>
                      <td><%= link_to 'Destroy', sc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      <% puts(sc.employee.name + ' ' + sc.employee.first_lastname) %>
                    </tr>
                  <% end %>
                </table>
              <% end %>
              <% @day += 1 %>
              <% if @day.month!=@month%>
                <% break %>
              <% end %>
            <% end %>
          </div>
        </td>
      <% end %>
    </tr>
  <% end %>
  <tbody>
  </tbody>
</table>